<h1>Listing review_votes</h1>

<table>
  <tr>
    <th>Review</th>
    <th>User ref</th>
    <th>User name</th>
    <th>Helpful</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @review_votes.each do |review_vote| %>
  <tr>
    <td><%= review_vote.review_id %></td>
    <td><%= review_vote.user_ref %></td>
    <td><%= review_vote.user_name %></td>
    <td><%= review_vote.helpful %></td>
    <td><%= link_to 'Show', review_vote %></td>
    <td><%= link_to 'Edit', edit_review_vote_path(review_vote) %></td>
    <td><%= link_to 'Destroy', review_vote, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

